@using Microsoft.AspNet.Identity
@if( Request.IsAuthenticated )
{
    using( Html.BeginForm( "LogOff" , "Account" , FormMethod.Post , new {
        id = "logoutForm" ,
        @class = "navbar-right"
    } ) )
    {
        @Html.AntiForgeryToken( )
    <ul class="nav navbar-nav navbar-right">

        <li>
            <a class='turq-hover dropdown-trigger' data-target='dropdown1'>@User.Identity.GetUserName()<i class="material-icons right">arrow_drop_down</i></a>
        </li>

    </ul>

        <!-- Dropdown Structure -->
        <ul id='dropdown1' class='dropdown-content'>

            <li>
                @Html.ActionLink( "Cuenta" , "Index" , "Manage" , routeValues: null , htmlAttributes: new {
               title = "Manage"}  )
            </li>
            <li class="divider" tabindex="-1"></li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()">Cerrar sesión</a></li>
        </ul>

    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>  <a class="turq-hover" id="loginLink" href="../Account/Login">Iniciar sesión</a> </li>
    </ul>
}

