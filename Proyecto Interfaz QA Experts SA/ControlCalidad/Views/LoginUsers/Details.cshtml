@model ControlCalidad.Models.AspNetUser

@{
    ViewBag.Title = "Details";
}

<h3 class="text-grey">Detalles de usuario</h3>
<div class="margin-b1">
    <hr />
</div>

<div>
    <div class="row ">
        <div class="col s6 offset-s3">
            <div class="card hoverable ">
                <nav>
                    <div class="nav-wrapper black">
                        <p class="col s4">Quality Expert S.A</p>
                    </div>
                </nav>
                <div class="card-content black-text">
                    <div class="row ">
                        <div class="col s12 margin-b1">
                            <p class="p-size"> <i class=" p-size material-icons left text-grey">mail</i> <span class="text-turq"> Correo</span> : @Html.DisplayFor( model => model.UserName ) </p>
                        </div>

                        <div class="col s12 margin-b1">
                            <p class="p-size"> <i class=" p-size material-icons left text-grey">work</i> <span class="text-turq"> Rol </span> : @Html.DisplayFor( model => model.Role ) </p>
                        </div>
                    </div>
                </div>
                <div class="card-action center">
                    <a class="margin-r waves-effect btn red accent-4 red-hover modal-trigger" href="#modal1">Borrar</a>
                    @Html.ActionLink( "Editar"  , "Edit", new { id=Model.Id }, new { @class = "margin-l waves-effect waves-light btn turq"
               } )

                </div>
            </div>
        </div>
    </div>
</div>

<div class="fixed-action-btn">
    <a href="@Url.Action( "Index" , "LoginUsers/Index" )" class="black btn-floating btn-large left turq-hover tooltipped" data-position="left" data-tooltip="Volver">
        <i class="large material-icons">arrow_back</i>
    </a>
</div>

<!-- Modal Structure -->
<div id="modal1" class="modal">
    <div class="row">
        <div class="">
            <nav class="">
                <div class="nav-wrapper black">
                    <p class="col s4 offset-s5">Quality Expert S.A</p>
                </div>
            </nav>
        </div>
    </div>

    <div class="modal-content ">
        <div class="row">
            <div class="col s2">
                <i class="material-icons medium red-text text-darken-4">warning</i>
            </div>
            <div class="s8">
                <h5>Está seguro que desea <span class="red-text text-darken-4 "> borrar </span> al usuario  @Model.UserName ?</h5>
            </div>
        </div>

        <div class="margin-b1">
            <hr />
        </div>
        <div class="modal-footer">
            @Html.ActionLink( "Aceptar" ,"RemoveUser",new { userId = Model.Id} , new {
           @class = " waves-effect waves-effect waves-light btn turq "
       } )
            <a class=" modal-close btn waves-effect red-hover btn red accent-4  ">Cancelar</a>
        </div>
    </div>
</div>