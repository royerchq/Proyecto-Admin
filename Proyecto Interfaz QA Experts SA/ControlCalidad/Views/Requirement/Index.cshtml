@model IEnumerable<ControlCalidad.Models.Requerimiento>

@{
    ViewBag.Title = "Index";
}

<h3 class="text-grey">Requerimientos del proyecto  </h3>
<div class="margin-b1">
    <hr />
</div>

<div class="card">

    <table class="table striped">
        <tr>
            <th class="center blue draken-3 white-text">
                Requerimiento
            </th>

            <th class="center blue draken-3 white-text">
                @Html.DisplayNameFor( model => model.estado )
            </th>

            <th class="center blue draken-3 white-text">
                @Html.DisplayNameFor( model => model.complejidad )
            </th>

            <th class="center blue draken-3 white-text">
                Acción
            </th>


            <th class="center blue draken-3 white-text">
                Pruebas
            </th>
        </tr>

       
            <tr>
                <td class="center">
                    Vista de Proyectos
                </td>
                <td class="center">
                    En Progreso
                </td>
                <td class="center">
                    Alta
                </td>
                <td class="center">
                    @Html.ActionLink("Detalles", "Details", new { id = 1 ,projectId = 1} ,
                    new { @class = "waves-effect waves-light btn blue draken-3 turq-hover" }
                    )

                </td>

                <td class="center">
                    @Html.ActionLink("Ver pruebas", "../Test/Index", new {
                   id = 1 ,
                   projectId =1
               } ,
                    new { @class = "waves-effect waves-light btn blue draken-3 turq-hover" }
                    )

                </td>
            </tr>
        
    </table>

</div>

<div class="fixed-action-btn">
    <a class="btn-floating btn-large blue draken-3 tooltipped" data-position="left" data-tooltip="Opciones">
        <i class="large material-icons">more_vert</i>
    </a>
    <ul>
        <li>
            <a href="@Url.Action("Index", "Project")" class="btn-floating btn-large blue draken-3 turq-hover tooltipped" data-position="left" data-tooltip="Volver">
                <i class="large material-icons">arrow_back</i>
            </a>
        </li>
        <li id="reqAdd"">
            <a href="@Url.Action("Create", "Requirement",new {projectId = ViewBag.projectId})" class="btn-add btn-floating btn-large blue draken-3 turq-hover left tooltipped" data-position="left" data-tooltip="Agregar nuevo requerimiento">
                <i class="large material-icons">add</i>
            </a>
        </li>

    </ul>
</div>

