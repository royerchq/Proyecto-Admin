@model ControlCalidad.Models.Empleado

@*{
        ViewBag.Title = "Details";
    }*@




@{

    string dateOfBirth = ViewBag.dateOfBirth;

    <h3 class="text-grey">Detalles de Empleado</h3>

    <div class="row">
        <div class="col s8 offset-s2">
            <div class="card hoverable">
                <nav>
                    <div class="nav-wrapper black">
                        <p class="col s4">Quality Expert S.A</p>
                    </div>
                </nav>
                <div class="card-content black-text">
                    <div class="row">
                        <div class="col s6">
                            <div class="col s12 margin-b1">
                                <p class="p-size">
                                    <i class="material-icons left text-grey">description</i>
                                    <span class="text-turq"> Nombre de empleado </span>
                                    : @Html.DisplayFor(model => model.nombreP)
                                </p>
                            </div>

                            <div class="col s12 margin-b1">
                                <p class="p-size">
                                    <i class="material-icons left text-grey">description</i>
                                    <span class="text-turq"> Primer apellido  </span>
                                    : @Html.DisplayFor(model => model.apellido1)
                                </p>
                            </div>

                            <div class="col s12 margin-b1">
                                <p class="p-size">
                                    <i class="material-icons left text-grey">person</i>
                                    <span class="text-turq"> Segundo apellido  </span>
                                    : @Html.DisplayFor(model => model.apellido2)
                                </p>
                            </div>

                            <div class="col s12 margin-b1">
                                <p class="p-size">
                                    <i class="material-icons left text-grey">perm_identity</i>
                                    <span class="text-turq"> Cédula  </span>
                                    : @Html.DisplayFor(model => model.cedulaPK)
                                </p>
                            </div>

                            <div class="col s12 margin-b1">
                                <p class="p-size">
                                    <i class="material-icons left text-grey">person</i>
                                    <span class="text-turq">Fecha de nacimiento  </span>
                                    : @Html.DisplayName( dateOfBirth )
                                </p>
                            </div>

                            <div class="col s12 margin-b1">
                                <p class="p-size">
                                    <i class="material-icons left text-grey">person</i>
                                    <span class="text-turq"> Edad  </span>
                                    : @Html.DisplayFor(model => model.edad)
                                </p>
                            </div>

                            <div class="col s12 margin-b1">
                                <p class="p-size">
                                    <i class="material-icons left text-grey">call</i>
                                    <span class="text-turq"> Telefono  </span>
                                    : @Html.DisplayFor(model => model.telefono)
                                </p>
                            </div>

                        </div>

                        <div class="col s6">

                            <div class="col s12 margin-b1">
                                <p class="p-size">
                                    <i class="material-icons left text-grey">person</i>
                                    <span class="text-turq"> Disponibilidad </span>
                                    : @Html.DisplayFor(model => model.disponibilidad)
                                </p>
                            </div>

                            <div class="col s12 margin-b1">
                                <p class="p-size">
                                    <i class="material-icons left text-grey">mail</i>
                                    <span class="text-turq"> Correo </span>
                                    : @Html.DisplayFor(model => model.correo)
                                </p>
                            </div>

                            <div class="col s12 margin-b1">
                                <p class="p-size">
                                    <i class="material-icons left text-grey">place</i>
                                    <span class="text-turq"> Provincia  </span>
                                    : @Html.DisplayFor(model => model.provincia)
                                </p>
                            </div>

                            <div class="col s12 margin-b1">
                                <p class="p-size">
                                    <i class="material-icons left text-grey">place</i>
                                    <span class="text-turq"> Canton  </span>
                                    : @Html.DisplayFor(model => model.canton)
                                </p>
                            </div>

                            <div class="col s12 margin-b1">
                                <p class="p-size">
                                    <i class="material-icons left text-grey">place</i>
                                    <span class="text-turq"> Distrito  </span>
                                    : @Html.DisplayFor(model => model.distrito)
                                </p>
                            </div>

                            <div class="col s12 margin-b1">
                                <p class="p-size">
                                    <i class="material-icons left text-grey">place</i>
                                    <span class="text-turq"> Direccion exacta  </span>
                                    : @Html.DisplayFor(model => model.direccionExacta)
                                </p>
                            </div>

                        </div>

                    </div>
                </div>
                <div class="card-action center">
                    <a id="delete-btn" class="margin-r waves-effect btn red accent-4 red-hover modal-trigger" href="#modal1">Borrar</a>
                    @Html.ActionLink("Editar", "Edit", new { id = Model.cedulaPK }, new
                    {
                   @class = " margin-l waves-effect waves-light btn turq",
                        @id = "edit-btn"
               })
                </div>
            </div>
        </div>
    </div>

    <div class="fixed-action-btn">
        <a href="@Url.Action( "Index" , "Employee/Index" )" class="btn-floating btn-large black turq-hover left">
            <i class="large material-icons">arrow_back</i>
        </a>
    </div>

}




<!-- Modal Structure -->
<div id="modal1" class="modal">
    <div class="row">
        <div class="">
            <nav>
                <div class="nav-wrapper black">
                    <p class="col s4 offset-s5">Quality Expert S.A</p>
                </div>
            </nav>
        </div>
    </div>

    <div class="modal-content ">
        <div class="row">
            <div class="col s2">
                <i class="material-icons medium red-text text-darken-4">warning</i>
            </div>
            <div class="s8">
                <h5>Está seguro que desea <span class="red-text text-darken-4 "> borrar </span> al empleado  @Model.nombreP ?</h5>
            </div>
        </div>

        <div class="margin-b1">
            <hr />
        </div>
        <div class="modal-footer">

            @Html.ActionLink("Aceptar", "RemoveEmployee", null, new { employeeId = Model.cedulaPK }, new { @class = "waves-effect red-hover btn red accent-4" })
            <a class="modal-close btn waves-effect waves-light turq white-text">Cancelar</a>
        </div>
    </div>
</div>

@{

    if (User.IsInRole("Lider") || User.IsInRole("Cliente"))
    {
        <script>
            document.getElementById("delete-btn").classList.add("hide");
            document.getElementById("edit-btn").classList.add("hide");
        </script>
    }
}
